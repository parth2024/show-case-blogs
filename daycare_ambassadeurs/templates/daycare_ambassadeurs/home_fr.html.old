            <!-- Abonnement newsletter -->
            <div class="mt-8 bg-white/10 backdrop-blur-sm rounded-2xl p-8 max-w-4xl mx-auto newsletter-glow relative floating-elements mb-8">
                <div class="text-center mb-6">
                    <div class="inline-block p-3 bg-amber-500 rounded-full mb-4 icon-bounce">
                        <i class="fas fa-envelope text-white text-2xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-white mb-2">Rejoignez la Newsletter des Ambassadeurs</h2>
                    <p class="text-lime-100 text-lg max-w-2xl mx-auto">
                        Recevez chaque semaine des mises à jour sur le développement de votre enfant, des conseils parentaux de nos experts,
                        et des informations exclusives sur notre environnement éducatif.
                    </p>
                </div>

                <form method="post" action="{% url 'daycare:subscribe_newsletter' %}" class="max-w-3xl mx-auto">
                    {% csrf_token %}
                    <div class="grid md:grid-cols-2 gap-4 mb-6">
                        <div class="relative">
                            <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input
                                    type="text"
                                    name="name"
                                    placeholder="Votre nom complet"
                                    class="w-full pl-12 pr-4 py-4 rounded-xl bg-white border-2 border-transparent focus:border-amber-400 input-focus text-gray-800 font-medium"
                                    required
                            >
                        </div>
                        <div class="relative">
                            <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input
                                    type="email"
                                    name="email"
                                    placeholder="Votre adresse e-mail"
                                    class="w-full pl-12 pr-4 py-4 rounded-xl bg-white border-2 border-transparent focus:border-amber-400 input-focus text-gray-800 font-medium"
                                    required
                            >
                        </div>
                    </div>

                    <div class="text-center">
                        <button
                                type="submit"
                                class="subscribe-btn text-white px-8 py-4 rounded-xl font-bold text-lg inline-flex items-center space-x-3 shadow-lg"
                        >
                            <i class="fas fa-paper-plane"></i>
                            <span>S'abonner et rester connecté</span>
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center">
                    <div class="flex flex-wrap justify-center items-center gap-4 text-sm text-lime-200">

                        <div class="flex items-center space-x-2">
                            <i class="fas fa-check-circle text-green-400"></i>
                            <span>Conseils parentaux d'experts</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <i class="fas fa-check-circle text-green-400"></i>
                            <span>Notifications d'événements</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <i class="fas fa-shield-alt text-blue-400"></i>
                            <span>Pas de spam, désabonnement à tout moment</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="border-t border-lime-700 pt-6">
                <p class="text-lime-300">
                    © 2024 La Garderie de l'Ambassadeur. Tous droits réservés. |
                    Enfants de 6 mois à 3 ans | 8h30 - 16h00
                </p>
            </div>

        </div>

    </div>
</footer>

<script>
    // Add this to your existing JavaScript file

    // Initialize Lottie animations (keep existing code)
    const lottieConfigs = [
        { id: 'hero-lottie', path: 'https://assets2.lottiefiles.com/packages/lf20_jcikwtux.json' },
        { id: 'about-lottie', path: 'https://assets9.lottiefiles.com/packages/lf20_DMgKk1.json' },
        { id: 'approach-lottie', path: 'https://assets4.lottiefiles.com/packages/lf20_khzniaya.json' },
        { id: 'activities-lottie', path: 'https://assets1.lottiefiles.com/packages/lf20_q5pk6p1k.json' },
        { id: 'indoor-lottie', path: 'https://assets8.lottiefiles.com/packages/lf20_fjzu4goj.json' },
        { id: 'outdoor-lottie', path: 'https://assets2.lottiefiles.com/packages/lf20_khtt8lb9.json' },
        { id: 'communication-lottie', path: 'https://assets5.lottiefiles.com/packages/lf20_V9t630.json' },
        { id: 'staff-lottie', path: 'https://assets7.lottiefiles.com/packages/lf20_ydo1amjm.json' },
        { id: 'download-en-lottie', path: 'https://assets3.lottiefiles.com/packages/lf20_kuhijzpb.json' },
        { id: 'download-fr-lottie', path: 'https://assets3.lottiefiles.com/packages/lf20_kuhijzpb.json' },
        { id: 'contact-lottie', path: 'https://assets1.lottiefiles.com/packages/lf20_u25cckyh.json' }
    ];

    // Load Lottie animations
    lottieConfigs.forEach(config => {
        const element = document.getElementById(config.id);
        if (element) {
            lottie.loadAnimation({
                container: element,
                renderer: 'svg',
                loop: true,
                autoplay: true,
                path: config.path
            });
        }
    });

    // Initialize typewriter effect
    function initTypewriter() {
        const typewriterElements = document.querySelectorAll('.typewriter-text');

        typewriterElements.forEach(element => {
            const text = element.getAttribute('data-text');
            if (text) {
                element.innerHTML = text;
            }
        });
    }

    // Enhanced scroll animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animated');
            }
        });
    }, observerOptions);

    // Initialize on DOM load
    document.addEventListener('DOMContentLoaded', () => {
        // Initialize typewriter effect
        initTypewriter();

        // Initialize existing functionality
        const animatedElements = document.querySelectorAll('.animate-on-scroll');
        animatedElements.forEach(el => observer.observe(el));

        initializeMobileMenu();

        // Add hero section entrance animation
        setTimeout(() => {
            const heroSection = document.querySelector('.gradient-bg');
            if (heroSection) {
                heroSection.style.opacity = '1';
            }
        }, 100);
    });

    // Add parallax effect to hero section
    window.addEventListener('scroll', () => {
        const nav = document.querySelector('nav');
        const heroSection = document.querySelector('.gradient-bg');
        const scrolled = window.pageYOffset;

        // Navigation shadow effect
        if (nav) {
            if (scrolled > 50) {
                nav.classList.add('shadow-lg');
            } else {
                nav.classList.remove('shadow-lg');
            }
        }

        // Hero parallax effect
        if (heroSection) {
            const rate = scrolled * -0.5;
            heroSection.style.transform = `translateY(${rate}px)`;
        }
    });

    // Keep your existing mobile menu and other functions here...
    function initializeMobileMenu() {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');

                // Animate hamburger icon
                const lines = mobileMenuBtn.querySelectorAll('path');
                if (mobileMenu.classList.contains('hidden')) {
                    // Reset to hamburger
                    lines[0].setAttribute('d', 'M4 6h16');
                    lines[1].setAttribute('d', 'M4 12h16');
                    lines[2].setAttribute('d', 'M4 18h16');
                } else {
                    // Transform to X
                    lines[0].setAttribute('d', 'M6 18L18 6');
                    lines[1].setAttribute('d', 'M6 6l12 12');
                    lines[2].setAttribute('d', 'M6 6l12 12');
                }
            });

            // Close mobile menu when clicking on links
            const mobileLinks = mobileMenu.querySelectorAll('a[href^="#"]');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                    // Reset hamburger icon
                    const lines = mobileMenuBtn.querySelectorAll('path');
                    lines[0].setAttribute('d', 'M4 6h16');
                    lines[1].setAttribute('d', 'M4 12h16');
                    lines[2].setAttribute('d', 'M4 18h16');
                });
            });
        }
    }

    // Keep all your existing functions (toggleMobileLanguage, toggleLanguageDropdown, etc.)
    function toggleMobileLanguage() {
        const mobileLanguageOptions = document.getElementById('mobile-language-options');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileLanguageOptions && mobileMenu) {
            if (mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.remove('hidden');
            }

            if (mobileLanguageOptions.style.display === 'none') {
                mobileLanguageOptions.style.display = 'block';
            } else {
                mobileLanguageOptions.style.display = 'none';
            }
        }
    }

    function toggleLanguageDropdown() {
        const dropdown = document.getElementById('languageDropdown');
        const icon = document.getElementById('langDropdownIcon');

        if (dropdown && icon) {
            dropdown.classList.toggle('opacity-0');
            dropdown.classList.toggle('scale-95');
            dropdown.classList.toggle('opacity-100');
            dropdown.classList.toggle('scale-100');

            icon.classList.toggle('rotate-180');
        }
    }

    // Keep existing click outside handler and smooth scrolling functionality...
    document.addEventListener('click', function(event) {
        const dropdown = document.getElementById('languageDropdown');
        const button = event.target.closest('button[onclick="toggleLanguageDropdown()"]');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileLanguageBtn = event.target.closest('button[onclick="toggleMobileLanguage()"]');

        if (!button && dropdown && dropdown.classList.contains('opacity-100')) {
            toggleLanguageDropdown();
        }

        if (!mobileMenuBtn?.contains(event.target) && !mobileMenu?.contains(event.target) && !mobileLanguageBtn) {
            if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('hidden');
                const lines = mobileMenuBtn?.querySelectorAll('path');
                if (lines) {
                    lines[0]?.setAttribute('d', 'M4 6h16');
                    lines[1]?.setAttribute('d', 'M4 12h16');
                    lines[2]?.setAttribute('d', 'M4 18h16');
                }
            }
        }
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    function scrollToElement(selector, offset = 80) {
        const element = document.querySelector(selector);

        if (element) {
            const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
            const offsetPosition = elementPosition - offset;

            window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
            });
        } else {
            console.warn(`Element with selector "${selector}" not found`);
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        const contactButton = document.querySelector('.hero-cta'); // or use an ID

        contactButton.addEventListener('click', function() {
            scrollToElement('#contact');
        });
    });
</script>

</body>
</html>